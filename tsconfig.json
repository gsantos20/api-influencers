{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src/",
    "paths": {
      "@database/*": ["database/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
